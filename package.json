{
  "name": "buffsign-platform",
  "version": "1.0.0",
  "description": "AI-Powered Digital Signature Platform for Namibia & SADC Region",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "aws-sdk": "^2.1490.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "sharp": "^0.32.6",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "pdf-lib": "^1.17.1",
    "node-forge": "^1.3.1",
    "llamaindex": "^0.1.15",
    "openai": "^4.20.1",
    "@llama-index/core": "^0.1.15",
    "@llama-index/embeddings": "^0.1.15",
    "@llama-index/readers": "^0.1.15",
    "socket.io": "^4.7.4",
    "bull": "^4.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/pg": "^8.10.7",
    "@types/nodemailer": "^6.4.14",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buffsign/platform.git"
  },
  "keywords": [
    "digital-signature",
    "namibia",
    "sadc",
    "eta-2019",
    "ai-powered",
    "electronic-signatures",
    "legal-compliance"
  ],
