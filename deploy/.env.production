# BuffrSign Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
REDIS_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Security Secrets (Generate with: openssl rand -hex 32)
JWT_SECRET=REPLACE_WITH_JWT_SECRET
ENCRYPTION_KEY=REPLACE_WITH_ENCRYPTION_KEY

# Application URLs (Update with your domain)
APP_URL=https://buffsign.com
API_URL=https://buffsign.com/api
CORS_ORIGIN=https://buffsign.com

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4-turbo-preview

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@buffsign.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+264000000000

# Storage Configuration (AWS S3)
STORAGE_PROVIDER=aws
STORAGE_BUCKET=buffsign-documents-prod
STORAGE_REGION=af-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring Configuration
GRAFANA_PASSWORD=REPLACE_WITH_GRAFANA_PASSWORD
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Compliance Configuration
ETA_2019_ENABLED=true
ETA_2019_STRICT_MODE=true
SADC_ENABLED=true
SADC_COUNTRIES=NA,ZA,BW,ZM,ZW,TZ,KE,UG,MW,ZW

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_LOGIN_MAX=5

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h
MFA_ENABLED=true
SESSION_TIMEOUT=3600

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_WORKFLOW_OPTIMIZATION=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_API_DOCS=false
ENABLE_PLAYGROUND=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true

# Performance Configuration
DB_MAX_CONNECTIONS=20
REDIS_TTL=3600
CACHE_ENABLED=true
COMPRESSION_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Certificate Configuration (for Let's Encrypt)
CERT_EMAIL=admin@buffsign.com
DOMAIN_NAME=buffsign.com
CERT_STAGING=false